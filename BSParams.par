lo_guess = 0.2553439855575562
critical_eps = 1e-15
sub_min_time = 10 #only count subcriticality after this time
subcritical_time = 1000 #if no horizon after this amount of time has passed, assume subcritical

#evolution parameters
run_spacetime_solver = 1
min_chi = 0.0001
min_z = 0.00001
max_stored_slices = 5
stop_on_migrate = 0 #if true, exit with message when central amplitude migrates by >10%

