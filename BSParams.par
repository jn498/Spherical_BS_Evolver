perturb = 0
perturb_amp = 0.05
perturb_spread = 6.0
perturb_center = 0
mirror_gaussian = 0
gaussian_start = 0
enforced_freq = 0.9

#grid params
R = 30
n_gridpoints = 450
courant_factor = 0.25
stop_time = 5000
cell_centered = 0
BS_resolution_factor = 2 #raise BS resolution in ID solver by this factor

do_t_ref = 0  #flag to tell whether to increase time resolution
